{% set layout = "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% if isDesktop() %}
    {% set layout = "ClarolineCoreBundle:Desktop:layout.html.twig" %}
{% else %}
    {% set workspace = _resource.getResourceNode().getWorkspace() %}
{% endif %}

{% extends layout %}

{% block title %}{{ _resource.getResourceNode().getName() | striptags | raw }}{% endblock %}

{% block section_content %}
    <div class="panel panel-default">

        <div class="panel-heading">
            <h3 class="panel-title">{{ _resource.getResourceNode().getName() }}</h3>
        </div>

        <div class="panel-body" id="text_content">
            <a class="btn btn-primary" href="{{ path('cpasimusante_simupoll_open', { 'id': _resource.getId() }) }}">
                <i class="fa fa-arrow-left"></i> {{ 'back' | trans }}
            </a>
            <hr>

            <form action="#" method="post" name="formResponse" id="formResponse">
                <ul>
                    {% for question in _resource.questions %}
                        <li><b>{{ question.category.name }}</b>
                            <table class="table">
                                <tr>
                                    <td>{{ question.title }}</td>
                                    {% for proposition in question.propositions %}
                                    {% set checked = "" %}
                                        <td>
                                            <input type="radio" name="choice" value="{{ question.id }}-{{ proposition.id }}" {{ checked }}/>
                                            {{ proposition.choice }}
                                        </td>
                                    {% endfor %}
                                </tr>
                            </table>
                        </li>
                    {% endfor %}
                </ul>
                <input class="form-control" type="hidden" name="somehidden" value="something"/>
                <input type="button" value="{{ "next" | trans }}" class="btn btn-primary" id="nextpage" />
                <input type="button" value="{{ "exit" | trans }}" class="btn btn-danger" id="exitpage" />
            </form>

        </div>

        <div class="panel-footer">

        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/cpasimusantesimupoll/css/simupoll.css') }}">
{% endblock %}

{% block javascripts %}
    {# Claroline JS #}
    {{ parent() }}
