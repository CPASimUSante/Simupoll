{% set layout = "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% if isDesktop() %}
    {% set layout = "ClarolineCoreBundle:Desktop:layout.html.twig" %}
{% else %}
    {% set workspace = _resource.getResourceNode().getWorkspace() %}
{% endif %}

{% extends layout %}

{% block title %}{{ _resource.getResourceNode().getName() | striptags | raw }}{% endblock %}

{% block section_content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ _resource.getResourceNode().getName() }}</h3>
        </div>

        <div class="panel-body" id="text_content">
            {% if allowToCompose == 1 and nbQuestion > 0 %}
                <a class="btn btn-primary" href="{{ path('ujm_exercise_paper', { 'id': _resource.id }) }}">
                    <i class="fa fa-check-square-o"></i> {{ 'compose' | trans }}
                </a>
            {% endif %}

            {% if is_granted('ADMINISTRATE', _resource) %}
                <a class="btn btn-primary" href="{{ path('cpasimusante_editsimupoll', { 'id': _resource.id }) }}">
                    <i class="fa fa-pencil"></i> {{ 'edit_simupoll' | trans }}
                </a>
                <a class="btn btn-primary" href="{{ path('cpasimusante_managecategories', { 'id': _resource.id }) }}">
                    <i class="fa fa-pencil"></i> {{ 'manage_categories' | trans }}
                </a>
                <a class="btn btn-primary" href="{{ path('cpasimusante_managetags', { 'id': _resource.id }) }}">
                    <i class="fa fa-pencil"></i> {{ 'manage_tags' | trans }}
                </a>
                <a class="btn btn-primary" href="{{ path('cpasimusante_managequestions', { 'id': _resource.id }) }}">
                    <i class="fa fa-pencil"></i> {{ 'manage_questions' | trans }}
                </a>
            {% endif %}

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="btn btn-primary" href="{{ path('cpasimusante_papers', { 'id': _resource.id }) }}">
                    <i class="fa fa-list"></i> {{ 'results' | trans }}
                </a>
            {% endif %}
        </div>

        <div class="panel-footer">

        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/cpasimusantesimupoll/css/simupoll.css') }}">
{% endblock %}

{% block javascripts %}
    {# Claroline JS #}
    {{ parent() }}
    <script type="text/javascript" src='{{ asset('bundles/cpasimusantesimupoll/js/simupoll.js') }}'></script>
{% endblock %}