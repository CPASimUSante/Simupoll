{% set layout = "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% if isDesktop() %}
    {% set layout = "ClarolineCoreBundle:Desktop:layout.html.twig" %}
{% else %}
    {% set workspace = _resource.getResourceNode().getWorkspace() %}
{% endif %}

{% extends layout %}

{% block title %}{{ _resource.getResourceNode().getName() | striptags | raw }}{% endblock %}

{% block section_content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ _resource.getResourceNode().getName() }}</h3>
        </div>

        <div class="panel-body" id="text_content">

            {% if is_granted('ADMINISTRATE', _resource) %}
                <a class="btn btn-primary" href="{{ path('cpasimusante_simupoll_category_manage', { 'id': _resource.id }) }}">
                    <i class="fa fa-pencil"></i> {{ 'manage_categories' | trans }}
                </a>
                <a class="btn btn-primary" href="{{ path('cpasimusante_simupoll_edit', { 'id': _resource.id }) }}">
                    <i class="fa fa-pencil"></i> {{ 'edit_simupoll' | trans }}
                </a>
                <a class="btn btn-primary" href="{{ path('cpasimusante_simupoll_organize', { 'id': _resource.id }) }}">
                    <i class="fa fa-pencil"></i> {{ 'organize_simupoll' | trans }}
                </a>
            {% endif %}

            {% if allowToCompose == 1 %}{% endif %}
                <a class="btn btn-primary" href="{{ path('cpasimusante_simupoll_paper', { 'id': _resource.id }) }}">
                    <i class="fa fa-check-square-o"></i> {{ 'compose' | trans }}
                </a>


            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="btn btn-primary" href="{{ path('cpasimusante_simupoll_results', { 'id': _resource.id }) }}">
                    <i class="fa fa-list"></i> {{ 'results' | trans }}
                </a>
            {% endif %}
        </div>

    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/cpasimusantesimupoll/css/simupoll.css') }}">
{% endblock %}

{% block javascripts %}
    {# Claroline JS #}
    {{ parent() }}
{% endblock %}