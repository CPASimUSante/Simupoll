{% set layout = "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% if isDesktop() %}
    {% set layout = "ClarolineCoreBundle:Desktop:layout.html.twig" %}
{% else %}
    {% set workspace = _resource.getResourceNode().getWorkspace() %}
{% endif %}

{% extends layout %}

{% block title %}{{ _resource.getResourceNode().getName() | striptags | raw }}{% endblock %}

{% macro proposition_prototype(form) %}
    <table class="table">
        <tr>
            <td class="proposition_label">{{ form_label(form.choice) }}</td>
            <td class="proposition_widget">{{ form_widget(form.choice) }}</td>
        </tr>
    </table>
{% endmacro %}

{% macro question_prototype(form) %}
    <table class="table">
        <tr>
            <td class="question_label">{{ form_label(form.title) }}</td>
            <td class="question_widget">{{ form_widget(form.title) }}</td>
        </tr>
        <tr>
            <td class="question_label">{{ form_label(form.category) }}</td>
            <td class="question_widget">{{ form_widget(form.category) }}</td>
        </tr>
        <tr>
            <td class="question_label">{{ form_label(form.propositions) }}</td>
            <td class="question_widget">
                <ul class="groupproposition" data-prototype="{{ _self.proposition_prototype(form.propositions.vars.prototype)|e }}"></ul>
            </td>
        </tr>
    </table>
{% endmacro %}

{% block section_content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ _resource.getResourceNode().getName() }}</h3>
        </div>

        <div class="panel-body" id="text_content">
            <form action="{{ path('cpasimusante_editsimupoll', {'id': _resource.id}) }}" method="post" {{ form_enctype(form) }} id="form">
                <h3>{{ form.title.vars.value }}</h3>
                <label class="control-label col-md-4">Indiquez les questions associées à ce Simupoll</label>
                <ul class="groupquestion" data-prototype="{{ _self.question_prototype(form.questions.vars.prototype)|e }}"></ul>
            </form>
        </div>

        <div class="panel-footer">
            <button type="button" class="btn btn-default" >{{ 'cancel'|trans({}, 'platform') }}</button>
            <button type="submit" class="btn btn-primary">{{ 'save'|trans({}, 'platform') }}</button>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/cpasimusantesimupoll/css/simupoll.css') }}">
{% endblock %}

{% block javascripts %}
    {# Claroline JS #}
    {{ parent() }}
    <script type="text/javascript" src='{{ asset('bundles/cpasimusantesimupoll/js/simupoll.js') }}'></script>
    <script type="text/javascript">
        $(document).ready(function() {

        });
    </script>
{% endblock %}