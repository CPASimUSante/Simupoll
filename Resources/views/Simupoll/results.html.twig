{% set layout = "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% if isDesktop() %}
    {% set layout = "ClarolineCoreBundle:Desktop:layout.html.twig" %}
{% else %}
    {% set workspace = _resource.getResourceNode().getWorkspace() %}
{% endif %}

{% extends layout %}

{% block title %}{{ _resource.getResourceNode().getName() | striptags | raw }}{% endblock %}

{% block section_content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ _resource.getResourceNode().getName() }}</h3>
        </div>

        <div class="panel-body" id="text_content">
            <a class="btn btn-primary" href="{{ path('cpasimusante_simupoll_open', { 'id': _resource.getId() }) }}">
                <i class="fa fa-arrow-left"></i> {{ 'back' | trans }}
            </a>
            <hr>

            {% if allowToCompose == 1 %}
                <a class="btn btn-primary" href="{{ path('cpasimusante_simupoll_stat_setup', {'id': _resource.getId() }) }}">
                    <i class="fa fa-cogs"></i> {{ 'setup_results_simupoll' | trans }}
                </a>
                <a class="btn btn-primary" href="{{ path('cpasimusante_simupoll_stats_allhtml', {'id': _resource.getId() }) }}">
                    <i class="fa fa-pencil"></i> {{ 'display_results_simupoll' | trans }}
                </a>
                <a class="btn btn-primary" href="#">
                    <i class="fa fa-download"></i> {{ 'export_csv_simupoll' | trans }}
                </a>
                <a class="btn btn-primary" href="#">
                    <i class="fa fa-bar-chart"></i> {{ 'show_graphics_simupoll' | trans }}
                </a>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/cpasimusantesimupoll/css/simupoll.css') }}">
{% endblock %}

{% block javascripts %}
    {# Claroline JS #}
    {{ parent() }}
{#    <script type="text/javascript" src='{{ asset('bundles/cpasimusantesimupoll/js/simupoll.js') }}'></script> #}
{% endblock %}